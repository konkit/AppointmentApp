%h1 Listing doctors

%table.table
  %thead
    %tr
      %th Name
      %th Hourly rate
      %th Hours per week
      %th
      %th
      %th

  %tbody
    - @doctors.each do |doctor|
      %tr
        %td= doctor.name
        %td= doctor.hourly_rate
        %td= doctor.hours_per_week
        %td= link_to 'Show', doctor
        %td= link_to 'Edit', edit_doctor_path(doctor)
        %td= link_to 'Destroy', doctor, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Doctor', new_doctor_path, class: 'btn btn-success'
