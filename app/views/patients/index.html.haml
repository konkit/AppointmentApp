%h1 Listing patients

%table.table
  %thead
    %tr
      %th Name
      %th Money amount
      %th
      %th
      %th

  %tbody
    - @patients.each do |patient|
      %tr
        %td= patient.name
        %td= patient.money_amount
        %td= link_to 'Show', patient
        %td= link_to 'Edit', edit_patient_path(patient)
        %td= link_to 'Destroy', patient, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Patient', new_patient_path, class: 'btn btn-success'
